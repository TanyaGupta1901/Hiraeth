    .ar {
        font-family: 'Heebo';
        --bg-filter-opacity: 0.5;
        background-image: linear-gradient(rgba(0, 0, 0, var(--bg-filter-opacity)), rgba(0, 0, 0, var(--bg-filter-opacity))), var(--bg-img);
        height: 15em;
        width: 21em;
        font-size: 1.5em;
        color: white;
        border-radius: 1em;
        padding: 1em;
        /*margin: 2em;*/
        display: flex;
        align-items: flex-end;
        background-size: cover;
        background-position: center;
        box-shadow: 0 0 5em -1em black;
        transition: all, var(--transition-time);
        position: relative;
        overflow: hidden;
        border: 10px solid #ccc;
        text-decoration: none;
    }

    .ar:hover {
        transform: rotate(0);
    }

    .ar h1 {
        margin: 0;
        font-size: 1.5em;
        line-height: 1.2em;
    }

    .ar p {
        font-size: 0.75em;
        font-family: 'Open Sans';
        margin-top: 0.5em;
        line-height: 2em;
    }

    .ar .tags {
        display: flex;
    }

    .ar .tags .tag {
        font-size: 0.75em;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 0.3rem;
        padding: 0 0.5em;
        margin-right: 0.5em;
        line-height: 1.5em;
        transition: all, var(--transition-time);
    }

    .ar:hover .tags .tag {
        background: var(--color);
        color: white;
    }

    .ar .date {
        position: absolute;
        top: 0;
        right: 0;
        font-size: 0.75em;
        padding: 1em;
        line-height: 1em;
        opacity: .8;
    }

    .ar:before,
    .ar:after {
        content: '';
        transform: scale(0);
        transform-origin: top left;
        border-radius: 50%;
        position: absolute;
        left: -50%;
        top: -50%;
        z-index: -5;
        transition: all, var(--transition-time);
        transition-timing-function: ease-in-out;
    }

    .ar:before {
        background: #ddd;
        width: 250%;
        height: 250%;
    }

    .ar:after {
        background: white;
        width: 200%;
        height: 200%;
    }

    .ar:hover {
        color: var(--color);
    }

    .ar:hover:before,
    .ar:hover:after {
        transform: scale(1);
    }

