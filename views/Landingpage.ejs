    .card-container {
        position: relative;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 25px;
        width: 100%;
        max-width: 1200px;
        height: auto;
        margin: 20px;
        font-family: 'neuzeit-grotesk', sans-serif;
        font-weight: 300;
        font-style: normal;
        font-size: 1em;
        line-height: 1.5;
        color: #03254c;
    }

    .card {
        height: 470px;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 40px 40px -20px #8fc7d544;
        overflow: hidden;
    }

    .card .card-top {
        height: 150px;
        font-family: 'neuzeit-grotesk', sans-serif;
        font-weight: 300;
        font-style: normal;
        font-size: 1em;
        line-height: 1.5;
        color: #03254c;
        background-color: #fff;
        overflow: hidden;
    }

    .card .card-top a {
        display: block;
        height: 100%;
    }

    .card .card-top a img {
        width: 100%;
        height: inherit;
        object-fit: cover;
        object-position: center;
        transition: 300ms;
    }

    .card .card-content {
        padding: 30px;
    }

    .card .card-content .tag {
        font-weight: 700;
        letter-spacing: 2px;
    }

    .card .tag-travel {
        color: #33459b;
    }

    .card .tag-nature {
        color: #339b4b;
    }

    .card .tag-architecture {
        color: #9b3d33;
    }

    .card .title {
        color: #03254c;
        font-weight: 300;
        transition: 300ms;
        font-size: 35px;
    }

    .card p {
        color: #7B8591;
        margin-top: 20px;
    }



    .card .card-top a img:hover {
        opacity: .75;
    }

    .card .title:hover {
        color: #03254cbb;
    }

    @media only screen and (max-width: 1240px) {

